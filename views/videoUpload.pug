extends layouts/main

block content
    .form-container
        form(action=routes.postUpload, method="post" enctype="multipart/form-data")
            label(for="videoFile") Video File
            input(type="file", id="videoFile", name="videoFile", required=true, accept="video/*")
            input(type="text", placeholder="Title", name="title")
            input(type="text", placeholder="Description", name="description")
            input(type="submit", value="Upload VideoFile")