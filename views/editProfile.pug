extends layouts/main

block content
    .form-container
        form(action=routes.editProfile, method="post" enctype="multipart/form-data")
            label(for="avatar") Avatar
            input(type="file", id="avatar", name="avatarFile" required=true, accept="picture/*")
            input(type="text", placeholder="Name", name="name")
            input(type="email", placeholder="Email", name="email")
            input(type="submit", value="Update Profile")
    
    a.form-container__link(href=routes.changePassword)
        | Change Password